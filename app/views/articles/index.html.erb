<h1><strong><u>Articles</u></strong></h1>
<table>
  <thead>
    <tr>
      <td><strong><u>Title</u></strong></td>
      <td><strong><u>Description</u></strong></td>
      <td colspan="3"><strong><u>Action</u></strong></td>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |a| %>
    <tr>
      <td><%=a.title%></td>
      <td><%=a.description%></td>
      <td><button type="button"><%= link_to 'show', article_path(a)%></button></td>
      <td><button type="button"><%= link_to 'edit', edit_article_path(a)%></button></td>
      <td><button type="button"><%= link_to 'delete', article_path(a), data: { turbo_confirm: "Are you sure?", turbo_method: :delete }%></button></td>
    </tr>
    <%end%>
  </tbody>
</table>

<p>
  <button type="button"><%= link_to 'Create article', new_article_path%></button> |
  <button type="button"><%= link_to 'Back to home', root_path%></button>
</p>
