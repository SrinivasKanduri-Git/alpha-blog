<h1><strong>Edit the article</strong></h1>

<% if @article.errors.any? %>
<h2 style="color: red">The following errors prevented the article from being saved</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li style = "color: red"><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%=f.label :title%></br>
    <%=f.text_field :title%>
  </p>
  <p>
    <%=f.label :description%></br>
    <%=f.text_area :description%>
  </p>
  <%=f.submit%>
<%end%>

<p>
  <button type="button"><%= link_to 'Back to articles', articles_path%></button>
</p>
